@inherits LayoutComponentBase

<PageTitle>Nhance.Decide</PageTitle>

<div class="container">
    <div class="row">
        @if (_expanded)
        {
            <div class="col-9">
                @Body
            </div>
            <div class="col-3" style="position: relative">
                <div class="bars expanded" @onclick="()=>_expanded=!_expanded"><i class="fal fa-bars"></i></div>
                <NavMenu />
            </div>
        }
        else
        {
            <div class="col-12" style="position: relative">
                @Body
                <div class="bars" @onclick="()=>_expanded=!_expanded"><i class="fal fa-bars"></i></div>
            </div>
        }
    </div>
</div>

@code
{
    private bool _expanded;
}